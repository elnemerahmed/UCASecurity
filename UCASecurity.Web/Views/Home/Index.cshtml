            }
        </div>
        <h4 class="pb-3 pt-2">أدوات التشفير</h4>
        <div class="row">
            @foreach (var algorithm in Symmetric)
            {
                algorithm.Title = SharedLocalizer.GetLocalizedHtmlString(algorithm.Title);
